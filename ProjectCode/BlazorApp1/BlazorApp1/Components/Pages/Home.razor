@page "/"

@rendermode InteractiveServer

@inject IConfiguration _config
@inject ISqlDataAccess _data
@inject NavigationManager NavigationManager

@using DataLibrary

<PageTitle>Home Page</PageTitle>


<div id="whole" class="d-flex align-items-center justify-content-center vh-80">
        <div class="card bg-dark text-white aux">
            <div class="card-body p-5 text-center aux">
                <div class="mb-md-5 mt-md-4 pb-5">
                    
                    <img class="mb-4" src="./images/LogoContorno.png" alt="" width="100">
                    <h2 class="textWelcome">WELCOME TO MATCH WORN ITEMS</h2>
                    <h2 class="textCena">Where Every Auction Tells a Sporting Tale!</h2>
                    <div class="registo">
                        <button type="button" class="buttonReg" @onclick="SendToLogin">LOG IN</button>
                    </div>
                    <div class="login">
                        <button type="button" class="buttonLog" @onclick="SendToSignUp">SIGN UP</button>
                    </div>
                </div>
            </div>
        </div>
    </div>




<link rel="stylesheet" href="css/home.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

@code {

    private void SendToLogin(){
        NavigationManager.NavigateTo("/login");
    }

    private void SendToSignUp(){
        NavigationManager.NavigateTo("/signup");
    }

}